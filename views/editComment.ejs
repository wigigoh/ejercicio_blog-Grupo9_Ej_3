<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Article</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <script src="https://kit.fontawesome.com/46ed15a972.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%- include("./partials/navbar.ejs") %>

    <main class="container">
      <form
        class="fw-bold container"
        action="/comentarios/<%= comment.id %>?_method=PATCH"
        method="post"
      >
        <div class="row mt-5 g-3 mb-3">
          <div class="col-12">
            <div class="mb-3">
              <label for="name" class="form-label my-3">Nombre</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                value="<%= comment.userName %>"
              />
            </div>

            <div class="mb-3">
              <label for="content" class="form-label my-3">Comentario</label>
              <textarea
                type="text"
                class="form-control"
                id="content"
                name="content"
                value=""
                cols="30"
                rows="10"
              >
<%= comment.userComment %></textarea
              >
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Aceptar</button>
      </form>
    </main>

    <%- include("./partials/footer.ejs") %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
